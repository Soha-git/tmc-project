NODE=1
DEFAULT_IP="10.10.0."
IP=10 
Vagrant.configure("2") do |config|
config.vm.synced_folder "./vagrant", "/vagrant", disabled: true
config.vm.box = "ubuntu/focal64"
config.vm.box_check_update = false
config.ssh.forward_agent = true
ssh_pub_key = File.readlines("#{Dir.home}/.ssh/id_rsa.pub").first.strip
config.vm.define "master" do |master|    
    master.vm.hostname = "master"
    master.vm.network "private_network", ip: DEFAULT_IP + "#{IP}"
    master.vm.provider "virtualbox" do |vb|
        vb.memory = 3048
        vb.cpus = 2
    end
    config.vm.provision 'shell', inline: "echo #{ssh_pub_key} >> /home/vagrant/.ssh/authorized_keys", privileged: false
    master.vm.provision "shell", path: "script/install_k8s.sh"
    master.vm.provision "shell", path: "script/master.sh"
end    
(1..NODE).each do |i|   
    config.vm.define "node0#{i}" do |node|   
    ssh_key = File.readlines("#{Dir.home}/.ssh/id_rsa").first.strip  
    node.vm.hostname = "node#{i}"
    node.vm.network "private_network", ip: DEFAULT_IP + "#{IP + 1}"
    node.vm.provider "virtualbox" do |vb|
        vb.memory = 1548
        vb.cpus = 1
    end
    node.vm.provision 'shell', inline: "echo #{ssh_pub_key} >> /home/vagrant/.ssh/authorized_keys", privileged: false
    node.vm.provision "file" , source: "~/.ssh/id_rsa", destination: "/home/vagrant/.ssh/id_rsa"
    node.vm.provision "shell", path: "script/install_k8s.sh"
    node.vm.provision "shell", path: "script/node.sh"
end    
end
end